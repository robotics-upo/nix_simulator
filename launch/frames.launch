<launch>

  <arg name="pi" value="3.141592654"/>
  <arg name="pi/2" value="1.5707963267948966"/>
  <arg name="pi/4" value="0.785"/>
  <arg name="3pi/4" value="2.355"/>
  
  <node pkg="tf2_ros" type="static_transform_publisher" name="os1_sensor_broadcaster" args="0.15 0 0.40 0 0 0 base_link os1_sensor"/>
  
  <node pkg="tf2_ros" type="static_transform_publisher" name="front_pico_cam_broadcaster" args="0.11 0 -0.06 0 0 0 os1_sensor pico_flexx_f"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="left_pico_cam_broadcaster" args="0 0.11 -0.06 0 0.25 $(arg pi/4) os1_sensor pico_flexx_l"/> 
  <node pkg="tf2_ros" type="static_transform_publisher" name="right_pico_cam_broadcaster" args="0 -0.11 -0.06 0 0.25 -$(arg pi/4) os1_sensor pico_flexx_r"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="back_pico_cam_broadcaster" args="-0.11 -0 -0.06 0 0 $(arg pi/2)  os1_sensor pico_flexx_b"/>
</launch>
